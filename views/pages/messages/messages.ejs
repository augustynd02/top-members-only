<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages</title>
    <link rel="stylesheet" href="/header.css">
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/messages.css">
    <link rel="stylesheet" href="/footer.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <%- include('../../partials/header') %>
    <main>
        <section>
            <% messages.forEach(message => { %>
                <div class="message">
                    <div class="message-header">
                        <h3><%= message.title %></h3>
                        <% if (user.membership_id == 3) { %>
                            <div class="actions">
                                <a href="/messages/<%= message.id %>/edit"><span class="material-icons edit">edit</span></a>
                                <a href="/messages/<%= message.id %>/delete"><span class="material-icons delete">delete</span></a>
                            </div>
                        <% } %>
                    </div>
                    <p><%= message.message %></p>
                    <div class="info">
                        <% if (user.membership_id == 1) { %>
                            <p>Upgrade your membership to view more information.</p>
                        <% } else { %>
                            <p>Posted by <span><%= user.firstname %> <%=user.lastname %> </span> at: <%= message.created_at %></p>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </section>
    </main>
    <%- include('../../partials/footer') %>
</body>
</html>
